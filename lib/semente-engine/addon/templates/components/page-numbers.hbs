{{#if canStepBackward}}
    <button class="btn btn--icon icon-chevron-left" {{action "incrementPage" -1}}></button>
    <button class="btn btn--icon icon-chevrons-left"  {{action "pageClicked" 1}}></button>
{{else}}
    <button class="btn btn--icon btn--disabled icon-chevron-left"></button>
    <button class="btn btn--icon btn--disabled icon-chevrons-left"></button>
{{/if}}

<div class="form-group">
    <input class="pagination__input" id="pagination_input" type="text" value="{{currentPage}} de {{totalPages}}" onfocus={{action 'clickPage'}} onblur={{action 'outPage'}} onkeyup={{action 'gotoPage'}}>
</div>

{{#if canStepForward}}
    <button class="btn btn--icon icon-chevrons-right" {{action "pageClicked" totalPages}}></button>
    <button class="btn btn--icon icon-chevron-right" {{action "incrementPage" 1}}></button>
{{else}}
    <button class="btn btn--icon btn--disabled icon-chevrons-right"></button>
    <button class="btn btn--icon btn--disabled icon-chevron-right"></button>
{{/if}}

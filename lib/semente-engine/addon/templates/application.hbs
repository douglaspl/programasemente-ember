                {{inst.instituicao_name}}
              </a>
            </li>
          {{/each}}
        </ul>

        <ul id="modelList" class="select-inst">
          {{#each instList as |pessoa idx|}}
            <li>
              <a class="select-inst__link" href="#" {{action 'selectPessoa' pessoa.id on='click'}}>
                {{pessoa.instituicao_name}}
                <!--  {{addone idx}} -  -->
              </a>
            </li>
          {{/each}}
        </ul>

        {{!--
      </div> --}}

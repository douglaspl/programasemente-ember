                    {{#if lista.link}}
                      <a href={{lista.link}}>
                        <i class="icon-file-text"></i>
                      </a>
                    {{else}}
                      <i class="fa fa-times-o"></i>
                    {{/if}}
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        {{/if}}
      </div>
    </div>
  </div>
  <div class="modal__footer">
    <button class="btn btn-primary" type="submit" {{action 'cancelLote'}}>Fechar</button>
  </div>
</aside>
